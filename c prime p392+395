#include<stdio.h>
#include<math.h>
unsigned long int next = 1;
unsigned int randp(void)
{
	next = next * 1103515245 + 12345;
	return (unsigned int)(next / 65536) % 32768;
}
void srandp(unsigned int seed)
{
	next = seed;
}
int main()
{	
	int i;
	srandp((unsigned int) time(0));
	for (i = 0; i < 10; i++)
		printf("%d\n", randp());
} 

