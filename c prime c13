P440ï¼š
#include<stdio.h>
#define length 41
int main()
{
	struct book {
		char title[length];
		char author[length];
		float value;
	};
	struct book library;
	puts("Please enter the book title:");
	gets(library.title);
	puts("Please enter the author's name:");
	gets(library.author);
	puts("Please enter the value:");
	scanf("%f", &library.value);
	puts("Below is the information of the book:");
	printf("%s by %s :$%.2f\n", library.title, library.author, library.value);
	printf("%s: \"%s\" ($%.2f)\n", library.author, library.title, library.value);
	return 0;
}

P330:
#include<stdio.h>
#define length 41
int main()
{
	struct book {
		char title[length];
		char author[length];
		float value;
	};
	struct book library[10];
	int count = 0;
	int index;
	puts("Now enter the information of the books(Enter \" \" to stop)");
	puts("Enter the title of the book:");
	while (count < 10 && gets(library[count].title) &&library[count].title[0] != '\0')
	{
		puts("Enter the author of the book:");
		gets(library[count].author);
		puts("Enter the value:");
		scanf("%f", &library[count++].value);
		while (getchar() != '\n');
		if (count < 10)
			puts("Enter the next title:");
	}
	if (count > 0)
	{
		puts("Here is the list of your books:");
			for (index = 0; index < count; index++)
				printf("%s by %s :$%.2f\n", library[index].title,
					library[index].author, library[index].value);
	}
	else
		puts("No books? Too bad.");
	return 0;
}
